{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react-jsx",
    "module": "commonjs",
    "lib": ["dom", "es2015", "es2017", "es2021", "dom.iterable"],
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "declaration": true,
    "moduleResolution": "node",
    "rootDirs": ["lib"],
    "sourceMap": true,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": ["./lib"]
}
